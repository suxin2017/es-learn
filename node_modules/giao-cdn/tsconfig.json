{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "lib",
        "rootDir": "src",
        "declarationDir": "lib",
        "declaration": true,
        "baseUrl": "src"
    },
    "include": ["src"],
    "exclude": ["giao-plugin-config.ts"]
}
